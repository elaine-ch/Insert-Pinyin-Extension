{
    "manifest_version": 2,
    "name": "Pinyinify",
    "version": "1.0",
  
    "description": "Adds pinyin above Chinese characters.",
  
    "icons": {
      "96": "pinyin-icon.png"
    },

    "permissions": ["activeTab"],

    "browser_action": {
        "default_icon": "pinyin-icon.png",
        "default_title": "Pinyinify",
        "default_popup": "popup/popup.html"
    }
  }
  